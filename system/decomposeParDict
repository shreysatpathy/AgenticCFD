FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 8;  // Use 8 cores (good balance for 16-core system)

method          simple;

simpleCoeffs
{
    n               (2 2 2);  // 2x2x2 = 8 subdomains
    delta           0.001;
}

distributed     no;

roots           ( );

