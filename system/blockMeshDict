FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

// Pool radius: 5cm = 0.05m
// Pool height: 10cm = 0.1m (allowing for vapor space above water)

vertices
(
    // Bottom vertices (z = 0)
    (-0.05 -0.05 0)     // 0
    ( 0.05 -0.05 0)     // 1
    ( 0.05  0.05 0)     // 2
    (-0.05  0.05 0)     // 3

    // Top vertices (z = 0.1)
    (-0.05 -0.05 0.1)   // 4
    ( 0.05 -0.05 0.1)   // 5
    ( 0.05  0.05 0.1)   // 6
    (-0.05  0.05 0.1)   // 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (40 40 40) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    bottom
    {
        type wall;
        faces
        (
            (0 1 2 3)
        );
    }

    walls
    {
        type wall;
        faces
        (
            (0 4 5 1)
            (1 5 6 2)
            (2 6 7 3)
            (3 7 4 0)
        );
    }

    top
    {
        type patch;
        faces
        (
            (4 7 6 5)
        );
    }
);

mergePatchPairs
(
);

